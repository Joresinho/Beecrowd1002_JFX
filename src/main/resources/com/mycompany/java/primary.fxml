   <children>
      <Circle fx:id="Círculo" fill="WHITE" opacity="0.72" radius="100.0" stroke="BLACK" strokeLineJoin="ROUND">
         <effect>
            <Reflection fraction="0.48" topOpacity="0.34" />
         </effect>
      </Circle>
      <Label text="Digite o raio do círculo." />
      <TextField fx:id="N" promptText="Ex: 5.5498" />
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Descobrir a área desse círculo" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
